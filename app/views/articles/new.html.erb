<div class="container">
  <%= form_for @article do |f| %>
    <%= f.label :genre, class:"control-label" %>
    <%= f.select :genre, [["RubyonRails","rubyonrails"],["Camera","camera"],["Game","game"],["F1","f1"]],class:"form-control col-7"%></br>
    <%= f.label :title, class:"control-label" %>
    <%= f.text_field :title, class:"form-control col-7"%>
    <%= f.label :body, class:"control-label" %>
    <%= f.text_area :body, size: "20x10", class:"form-control"%>
    <%= f.label :image, class:"control-label" %>
    <%= f.file_field :image, class:"form-control-file" %>
    <%= f.submit "送信", class:"mt-2 mb-2" %>
  <% end %>
</div>